<UserControl x:Class="ExcRPM.Components.ProductUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExcRPM.Components"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="120">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Image Margin="5" Source="\Resourses\Img1.png"></Image>

        <TextBlock Grid.Row="1" Text="{Binding Name}" Margin="5"></TextBlock>
        <TextBlock Grid.Row="2" Text="{Binding Unit.Name}" Margin="5"></TextBlock>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button Padding="0">-</Button>
            <TextBox Width="30"></TextBox>
            <Button Padding="0">+</Button>
        </StackPanel>

    </Grid>
</UserControl>
