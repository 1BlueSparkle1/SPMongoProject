<Page x:Class="WpfApp1.MyPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel x:Name="StartMenuSp" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="EntranceBtn" Click="EntranceBtn_Click">Войти</Button>
            <Button Name="SettingsBtn" Click="SettingsBtn_Click">Настройки</Button>
            <Button Name="ExitBtn" Click="ExitBtn_Click">Выход</Button>
        </StackPanel>
    </Grid>
</Page>
