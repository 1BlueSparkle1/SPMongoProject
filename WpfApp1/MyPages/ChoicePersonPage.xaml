<Page x:Class="WpfApp1.MyPages.ChoicePersonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChoicePersonPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Name="ChoiceSp" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="WarriorBtn" Click="WarriorBtn_Click">Воин</Button>
                <Button Name="RogueBtn" Click="RogueBtn_Click">Вор</Button>
                <Button Name="WizardBtn" Click="WizardBtn_Click">Маг</Button>
            </StackPanel>
            <TextBlock>Введите имя персонажа</TextBlock>
            <TextBox Height="35"></TextBox>
            <!--<StackPanel x:Name="Choice">
                <Button>Создать нового</Button>
                <Button>Выбрать из ваших персонажей</Button>
            </StackPanel>-->
            <Button Name="Back2Btn" Click="Back2Btn_Click">Назад</Button>
        </StackPanel>
    </Grid>
</Page>
